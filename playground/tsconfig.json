{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["../*"]
    },
    "types": ["vite/client", "vue", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "env.d.ts",
    "../src/**/*.ts",
    "../src/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}
